{
  "compilerOptions": {
    "strict": true,             //Включение строгого режима
    "outDir": "dist",           //Папка назначения транспилированного кода
    "target": "ES2015",         //Стандарт кода, на котором написан код проекта
    "module": "ES2015",         //Стандарт кода, в который будет выполняться транспиляция
    "moduleResolution": "node"  //Среда исполнения кода
  },
  "files": [                    //Массив файлов, которые будут скомпилированы
    "src/index.ts"
  ]
}